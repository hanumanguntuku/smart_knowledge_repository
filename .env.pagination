# Pagination and Performance Configuration
# Adjust these values based on your system capabilities and needs

# Search Result Limits
MAX_SEARCH_RESULTS=200           # Maximum search results in UI
DEFAULT_SEARCH_RESULTS=20        # Default search results

# Document Browsing Limits  
MAX_BROWSE_DOCUMENTS=500         # Maximum documents per page in browse view
DEFAULT_BROWSE_DOCUMENTS=50      # Default documents per page

# API Limits
API_DEFAULT_LIMIT=100           # Default API response limit
API_MAX_LIMIT=500               # Maximum API response limit

# Performance Thresholds
PERFORMANCE_WARNING_MS=100      # Warn if processing >100ms per item
MEMORY_WARNING_MB=50            # Warn if response >50MB
QUERY_TIMEOUT_SECONDS=30        # Standard query timeout
LARGE_QUERY_TIMEOUT_SECONDS=60  # Timeout for large queries

# Progressive Loading
PROGRESSIVE_LOADING_THRESHOLD=100  # Use progressive loading for >100 items
BATCH_SIZE=50                      # Load in batches of 50

# Database Query Limits
DB_DEFAULT_LIMIT=500            # Default database query limit
DB_SEARCH_LIMIT=50              # Default search query limit

# Memory Management
ENABLE_RESULT_CACHING=true      # Cache results to improve performance
CACHE_EXPIRY_MINUTES=10         # Cache expiry time
MAX_CACHE_SIZE_MB=100           # Maximum cache size in memory

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true  # Enable performance tracking
LOG_SLOW_QUERIES=true              # Log queries that exceed thresholds
PERFORMANCE_LOG_LEVEL=INFO         # Log level for performance messages
